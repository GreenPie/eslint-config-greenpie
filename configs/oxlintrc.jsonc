{
  "$schema": "../node_modules/oxlint/configuration_schema.json",

  "plugins": [
    "eslint",
    "import",
    "jsdoc",
    "oxc",
    "promise",
    "typescript",
    "unicorn",
    "vitest",
    "vue"
  ],

  "categories": {
    "correctness": "off",
    "nursery": "off",
    "pedantic": "off",
    "perf": "off",
    "restriction": "off",
    "style": "off",
    "suspicious": "off"
  },

  // Releases: https://github.com/oxc-project/oxc/releases
  // Rules: https://oxc.rs/docs/guide/usage/linter/rules.html
  "rules": {
    /**
     * Correctness rules
